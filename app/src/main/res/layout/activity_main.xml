<?xml version="1.0" encoding="utf-8"?>
<com.hipac.uikit.feature.view.TScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <com.hipac.uikit.feature.view.TLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Switch
            android:id="@+id/switch_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热力图开关" />

        <com.hipac.uikit.feature.view.TTextView
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:textSize="30sp"
            app:uik_orientation="horizontal"
            app:uik_ratio="1.0"
            app:uik_ratioFeature="true"
            app:uik_trackCode="6.6.6.6.6"
            app:uik_trackEventFeature="true"
            app:uik_trackName="测试商品购买按钮" />

    </com.hipac.uikit.feature.view.TLinearLayout>

</com.hipac.uikit.feature.view.TScrollView>